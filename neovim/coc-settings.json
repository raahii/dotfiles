{
  "coc.preferences.formatOnSaveFiletypes": [],

  "suggest.noselect": false,
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.triggerCompletionWait": 50,
  "suggest.timeout": 5000,
  "suggest.removeDuplicateItems": true,

  "diagnostic.enable": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableSign": true,
  "diagnostic.hintSign": "⚑",
  "diagnostic.infoSign": "⚑",
  "diagnostic.warningSign": "⚑",
  "diagnostic.errorSign": "⚑",

  "list.source.mru.ignoreGitIgnore": true,

  "jedi.startupMessage": true,

  "go.checkForUpdates": true,
  "go.goplsOptions": {
    "usePlaceholders": true,
    "completeUnimported": true,
    "caseSensitiveCompletion": true
  },

  "docker.enable": true,

  "yaml.validate": true,
  "yaml.hover": true,

  "git.enableGutters": false,

  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.filetypes": {
     "sh": "shellcheck",
     "dockerfile": "hadolint"
  },
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": [ "go" ],
      "initializationOptions": {
        "linters": {
          "golint": {
            "command": "golint",
            "rootPatterns": [],
            "isStdout": true,
            "isStderr": false,
            "debounce": 100,
            "args": ["%filepath"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "golint",

            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": [3]
              }
            ]
          }
        },
        "formatters": {},
        "filetypes": {
          "go": "golint"
        },
        "formatFiletypes": {}
      },
      "securities": {
        "warning": "warning"
      }
    },
    "kotlin": {
      "command": "/Users/naka/repos/src/github.com/fwcd/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  }
}
