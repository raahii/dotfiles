{
  "coc.preferences.formatOnSaveFiletypes": [],

  "suggest.noselect": false,
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.echodocSupport": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.triggerCompletionWait": 50,
  "suggest.timeout": 5000,
  "suggest.removeDuplicateItems": true,

  "diagnostic.enable": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableSign": true,
  "diagnostic.hintSign": "⚑",
  "diagnostic.infoSign": "⚑",
  "diagnostic.warningSign": "⚑",
  "diagnostic.errorSign": "⚑",

  "list.source.mru.ignoreGitIgnore": true,

  "python.pythonPath": "/usr/bin/python3",
  "python.analysis.diagnosticEnabled": true,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.jediEnabled": false,

  "go.goplsOptions": {
    "usePlaceholders": true,
    "completeUnimported": true,
    "matcher": "CaseSensitive",
    "hoverKind": "FullDocumentation"
  },

  "docker.enable": true,

  "yaml.validate": true,
  "yaml.hover": true,

  "vimlsp.diagnostic.enable": true,
  "git.enableGutters": false,

  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.filetypes": {
     "sh": "shellcheck",
     "dockerfile": "hadolint"
  },

  "tsserver.formatOnType": false,

  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": false,

  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": [ "go" ],
      "initializationOptions": {
        "linters": {
          "golint": {
            "command": "golint",
            "rootPatterns": [],
            "isStdout": true,
            "isStderr": false,
            "debounce": 100,
            "args": ["%filepath"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "golint",

            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": [3]
              }
            ]
          }
        },
        "formatters": {},
        "filetypes": {
          "go": "golint"
        },
        "formatFiletypes": {}
      },
      "securities": {
        "warning": "warning"
      }
    }
  }
}
